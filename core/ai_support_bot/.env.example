# ============================================
# AI Support Bot — Environment Variables
# ============================================
# Copy this file to .env and fill in your values.
# NEVER commit the .env file to Git.

# ── Discord ──────────────────────────────────
DISCORD_BOT_TOKEN=your_discord_bot_token_here
ALLOWED_CHANNEL_IDS=1476345137419259956
BOT_GUILD_ID=1475450344334037063

# ── OpenRouter / LLM Provider ───────────────
OPENROUTER_API_KEY=your_openrouter_api_key_here
LLM_MODEL=google/gemini-2.5-flash
LLM_PROVIDER=openrouter

# ── Notion ───────────────────────────────────
NOTION_TOKEN=secret_your_notion_token_here

# ── Google Sheets (base64-encoded SA JSON) ───
# Generate: base64 -w 0 service-account.json
GOOGLE_SA_BASE64=base64_encoded_service_account_json

# ── Cache ────────────────────────────────────
CACHE_TTL_SECONDS=3600

# ── Rate Limiting ────────────────────────────
RATE_LIMIT_MAX_CALLS=5
RATE_LIMIT_WINDOW_SECONDS=60

# ── Logging / Environment ────────────────────
LOG_LEVEL=INFO
ENVIRONMENT=development

# ── Ingestion ────────────────────────────────
INGESTION_INTERVAL_SECONDS=3600
